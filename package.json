  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "ssh2": "^1.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/ssh2": "^1.15.5",
    "typescript": "^5.3.3"
  }
}
